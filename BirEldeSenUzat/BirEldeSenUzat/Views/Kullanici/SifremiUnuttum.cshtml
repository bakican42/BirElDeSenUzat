
@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Şifremi Unuttum</title>
    <link href="~/Green/assets/img/favicon.png" rel="icon">
    <link href="~/Green/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/Green/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/Green/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row" style="height:100vh;">
            <form method="post" action="/Kullanici/SifremiUnuttum">
                <div class="col-md-12 my-auto">

                    <h3 class="text-danger">@ViewBag.Mesaj</h3>

                    <div class="mx-auto" style="width: 500px; height: auto; border: 1px #DCDCDC solid; border-radius: 24px;">
                        <div class="row mt-5">
                            <div class="col text-center">
                                <i style="font-size:100px;" class="bi bi-lock-fill"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-center">
                                <p><strong>Şifrenizi mi unuttunuz?</strong></p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col text-center">
                                <p>Şifrenizi sıfırlamak için bir bağlantı göndereceğiz</p>
                            </div>
                        </div>
                        <div class="row justify-content-center mt-3">
                            <div class="form-group w-50">
                                <label for="formGroupExampleInput">Email</label>
                                <input name="Mail" type="text" class="form-control mt-2" id="formGroupExampleInput" placeholder="Email Adresinizi Giriniz">
                                <a href="/Kullanici/SifreYenile"><button type="submit" class="btn btn-success w-100 mt-3 mb-5">Gönder</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>
</html>