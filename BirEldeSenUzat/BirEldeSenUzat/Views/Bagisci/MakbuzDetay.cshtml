@model BirEldeSenUzat.Models.Sepet

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bağış Detay</title>
    <link href="~/Green/assets/img/favicon.png" rel="icon">
    <link href="~/Green/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/Green/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Green/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/Green/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <div id="Grid">
        <div class="container">
            <div class="row mt-3">
                <div class="col-md-12 my-auto">
                    <div class="mx-auto" style="width: 800px; height: 160px;">
                        <div class="row" style="border: 1px #DCDCDC solid; border-radius: 20px;">
                            <div class="col-4 mt-2">
                                <img style="width:400px; height:130px;" src="~/Green/assets/img/team/logo.jpeg" />
                            </div>
                            <div class="col-8">
                                <div class="row text-end">
                                    <h5 class="mt-3"><strong>BİR EL DE SEN UZAT A.Ş.</strong></h5>
                                    <span> Sivas Çelik karşısı, Üçlerbey Mah. Yahyabey cad,<br />Keteci Apt No:30 Merkez, 58058 Merkez/Sivas</span>
                                    <span>0 212 631 21 21</span>
                                    <span>www.bireldesenuzat.com.tr</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 my-auto">
                    <div class="mx-auto" style="width: 800px; height: auto;">
                        <div class="row text-center">
                            <h3><strong>DEKONT</strong></h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 my-auto">
                    <div class="mx-auto" style="width: 800px; height: auto;">
                        <div class="row">
                            <div class="col" style="width:350px; height:100px; border: 1px #DCDCDC solid; border-radius: 20px;">
                                <div class="row">
                                    <span class="mt-2">
                                        Sayın @Model.Kullanici.AdSoyad
                                    </span>
                                </div>
                                <div class="row mt-1">
                                    <span>
                                        T.C Kimlik No: @Model.Kullanici.TCNo
                                    </span>
                                </div>
                                <div class="row mt-1">
                                    <span>
                                        Adres : @Model.Kullanici.AdresDetay
                                    </span>
                                </div>
                            </div>
                            <div class="col" style="margin-left:10px; width:350px; height:100px; border: 1px #DCDCDC solid; border-radius: 20px;">
                                <div class="row mt-3">
                                    <span>Tarih : @DateTime.Now</span>
                                </div>
                                <div class="row mt-3">
                                    <span>Ödeme Türü : Online Bağış</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 my-auto">
                    <div class="mx-auto" style="width: 800px; height: auto;">
                        <div class="row text-center" style="border: 1px #DCDCDC solid; border-radius: 20px;">
                            <table class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Sıra No</th>
                                        <th scope="col">Bağış Başlık</th>
                                        <th scope="col">Bağış Açıklama</th>
                                        <th scope="col">Bağış Tarih</th>
                                        <th scope="col">Bağış Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>@Model.Bagislar.Baslik</td>
                                        <td>@Model.Bagislar.aciklama</td>
                                        <td>@Model.Tarih</td>
                                        <td>@Model.Toplam₺</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 my-auto">
                    <div class="mx-auto" style="width: 800px; height: 200px;">
                        <div class="row" style="border: 1px #DCDCDC solid; border-radius: 20px;">
                            <span>
                                Herhangi bir sorunuz varsa, 0(212) 631-2121 numaralı telefondan bizimle iletişime geçebilir veya
                                bireldesenuzat@gmail.com adresinden bize e-posta gönderebilirsiniz.
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


