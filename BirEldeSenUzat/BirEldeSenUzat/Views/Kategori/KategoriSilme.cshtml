@model BirEldeSenUzat.Models.Kategori

@{
    ViewBag.Title = "KategoriSilme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="ml-3"><strong>Kategori Sil</strong></h2>
<hr />
<h3 class="ml-3" style="color:red">Bu kategori adını silmek istediğinizden eminmisiniz?</h3>
<div class="ml-3">
    <dl class="dl-horizontal">
        <dt>
            Kategori Adı:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kategori_ad)
        </dd>

        <dt>
            Kategori Açıklaması:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.aciklama)
        </dd>

    </dl>

    @using (Html.BeginForm("KategoriSilme", "Kategori", FormMethod.Post)) 
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Kategoriyi Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Geri Dön", "Kategoriler")
        </div>
    }
</div>
