
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="ml-3"><strong>Kategori Ekle</strong></h2>
<hr />
<form method="post" action="/Kategori/KategoriEkle">
    <div class="form-group ml-3">
        <div class="col-md-8 ">
            <label>Kategori Adı</label>
            <input name="kategori_ad" type="text" class="form-control w-75" placeholder="Kategori Adı">
        </div>
    </div>
    <div class="form-group ml-3">
        <div class="col-md-8 ">
            <label>Kategori Açıklaması</label>
            <textarea rows="2" name="aciklama" type="text" class="form-control w-75" placeholder="Kategori Açıklaması"></textarea>
        </div>
    </div>
    <div class="form-group ml-3">
        <div class="col-md-8">
            <button type="submit" class="btn btn-primary">Kategori Ekle</button>
        </div>
    </div>
</form>

